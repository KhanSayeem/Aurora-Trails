@model IEnumerable<TourismApp.Models.TourPackage>
@{
    ViewData["Title"] = "Home Page";
}

@section Hero {
<div class="hero-section">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Discover Your Next Adventure</h1>
                <p class="lead mb-4">Explore handpicked tour packages from trusted travel agencies around the world. Find your perfect getaway today.</p>
                <div class="d-flex gap-3">
                    <a href="@Url.Action("Index", "Tours")" class="btn btn-light btn-lg">
                        <i class="fas fa-search me-2"></i>Browse Tours
                    </a>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a href="@Url.Page("/Account/Register")" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-user-plus me-2"></i>Join Now
                        </a>
                    }
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-block">
                <div class="rounded-circle bg-white bg-opacity-25 p-5 mx-auto" style="width: 300px; height: 300px;">
                    <i class="fas fa-globe-americas fa-7x text-white"></i>
                </div>
            </div>
        </div>
    </div>
</div>
}

<div class="container">
    <div class="row mb-5">
        <div class="col-md-4 mb-4">
            <div class="card feature-card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="rounded-circle bg-primary bg-opacity-10 p-3 d-inline-block mb-3">
                        <i class="fas fa-search fa-2x text-primary"></i>
                    </div>
                    <h5 class="card-title">Find Your Perfect Tour</h5>
                    <p class="card-text">Browse hundreds of tour packages tailored to your interests and budget.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card feature-card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="rounded-circle bg-success bg-opacity-10 p-3 d-inline-block mb-3">
                        <i class="fas fa-check-circle fa-2x text-success"></i>
                    </div>
                    <h5 class="card-title">Trusted Agencies</h5>
                    <p class="card-text">Book with confidence through our verified and reviewed travel agencies.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card feature-card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="rounded-circle bg-info bg-opacity-10 p-3 d-inline-block mb-3">
                        <i class="fas fa-heart fa-2x text-info"></i>
                    </div>
                    <h5 class="card-title">Memorable Experiences</h5>
                    <p class="card-text">Create unforgettable memories with our carefully curated experiences.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">Popular & Recent Tours</h2>
                <a href="@Url.Action("Index", "Tours")" class="btn btn-outline-primary">View All Tours</a>
            </div>
            <hr>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info d-flex align-items-center" role="alert">
            <i class="fas fa-info-circle fa-lg me-2"></i>
            <div>No tours available yet. Check back soon for exciting travel opportunities!</div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var t in Model.Take(6))
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@(string.IsNullOrWhiteSpace(t.ImagePath) 
                            ? Url.Content("~/images/placeholder.jpg") 
                            : Url.Content(t.ImagePath))"
                            asp-append-version="true"
                            class="card-img-top" style="height: 200px; object-fit: cover;"
                            alt="@t.Title" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@t.Title</h5>
                            <p class="card-text flex-grow-1">
                                @(t.Description.Length > 100 ? t.Description.Substring(0, 100) + "..." : t.Description)
                            </p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="h5 text-primary mb-0">$@t.Price</span>
                                    <span class="badge bg-secondary">@t.DurationDays @(t.DurationDays == 1 ? "day" : "days")</span>
                                </div>
                                <a asp-controller="Tours" asp-action="Details" asp-route-id="@t.Id" class="btn btn-primary w-100">
                                    <i class="fas fa-info-circle me-1"></i>View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
