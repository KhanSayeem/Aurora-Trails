@model TourismApp.Models.Feedback
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Leave Feedback";
}

<section class="max-w-2xl space-y-6">
    <div>
        <h1 class="heading">Leave feedback</h1>
        <p class="section-subtitle">Share thoughtful notes with the agency managing your experience.</p>
    </div>

    <div class="card p-6">
        <form method="post" class="space-y-6">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="BookingId" value="@ViewData["BookingId"]" />

            <div class="form-field">
                <label asp-for="Rating" class="form-label">Rating (1-5)</label>
                <input asp-for="Rating" class="input" type="number" min="1" max="5" />
                <span asp-validation-for="Rating" class="text-sm text-rose-500"></span>
            </div>

            <div class="form-field">
                <label asp-for="Comment" class="form-label">Comment</label>
                <textarea asp-for="Comment" class="input-textarea" placeholder="Optional notes about your experience"></textarea>
                <span asp-validation-for="Comment" class="text-sm text-rose-500"></span>
            </div>

            <button type="submit" class="btn-primary px-5 py-2.5">Submit feedback</button>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}