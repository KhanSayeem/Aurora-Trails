@model TourismApp.Models.AgencyProfile
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Agency Profile";
}

<section class="space-y-8">
    <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
        <div>
            <h1 class="heading">Agency profile</h1>
            <p class="section-subtitle">This information is displayed to travellers exploring your tours.</p>
        </div>
    </div>

    @if (TempData["Msg"] is string ok)
    {
        <div class="rounded-2xl border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-700 shadow-sm">@ok</div>
    }

    <div class="grid gap-6 lg:grid-cols-[1.4fr,1fr]">
        <div class="card p-6">
            <h2 class="section-title text-xl">Agency information</h2>
            <p class="section-subtitle">Share your story, differentiators, and contact details.</p>

            <form asp-action="Agency" method="post" class="mt-6 space-y-5">
                @Html.AntiForgeryToken()
                <div class="form-field">
                    <label asp-for="AgencyName" class="form-label">Agency name</label>
                    <input asp-for="AgencyName" class="input" placeholder="Enter your agency name" required />
                    <span asp-validation-for="AgencyName" class="text-sm text-rose-500"></span>
                </div>
                <div class="form-field">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="input-textarea" placeholder="Describe your agency and services"></textarea>
                    <span asp-validation-for="Description" class="text-sm text-rose-500"></span>
                    <p class="text-xs text-slate-400">Tell guests about your expertise, signature itineraries, and values.</p>
                </div>
                <div class="form-field">
                    <label asp-for="Website" class="form-label">Website URL</label>
                    <input asp-for="Website" class="input" type="url" placeholder="https://www.yourwebsite.com" />
                    <span asp-validation-for="Website" class="text-sm text-rose-500"></span>
                    <p class="text-xs text-slate-400">Include the full URL including https://</p>
                </div>
                <div class="form-field">
                    <label class="form-label">Contact email</label>
                    <input type="email" class="input" value="@User.Identity?.Name" disabled />
                    <p class="text-xs text-slate-400">Primary contact email changes require support assistance.</p>
                </div>
                <div class="flex justify-end">
                    <button type="submit" class="btn-primary px-6 py-2.5">Save profile</button>
                </div>
            </form>
        </div>

        <div class="space-y-6">
            <div class="card p-6">
                <h3 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Account overview</h3>
                <div class="mt-4 space-y-4 text-sm text-slate-600">
                    <div class="flex items-center justify-between">
                        <span class="text-slate-500">Account type</span>
                        <span class="badge badge-info">Agency</span>
                    </div>
                    <div class="flex items-center justify-between">
                        <span class="text-slate-500">Contact email</span>
                        <span class="font-medium text-slate-900">@User.Identity?.Name</span>
                    </div>
                    <div class="flex items-center justify-between">
                        <span class="text-slate-500">Member since</span>
                        <span class="font-medium text-slate-900">Recent</span>
                    </div>
                </div>
            </div>
            <div class="card p-6">
                <h3 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Business shortcuts</h3>
                <div class="mt-4 grid gap-3 text-sm">
                    <a asp-controller="Tours" asp-action="MyPackages" class="btn-outline px-4 py-2 text-left">Manage packages</a>
                    <a asp-controller="Bookings" asp-action="Manage" class="btn-outline px-4 py-2 text-left">Manage bookings</a>
                    <a asp-controller="Feedbacks" asp-action="Agency" class="btn-outline px-4 py-2 text-left">Customer feedback</a>
                </div>
            </div>
            <div class="card p-6">
                <h3 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Profile tips</h3>
                <ul class="mt-4 space-y-2 text-sm text-slate-500">
                    <li>• Craft a compelling overview of your agency voice.</li>
                    <li>• Keep your website and contact details fresh.</li>
                    <li>• Refresh imagery and packages regularly.</li>
                </ul>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}