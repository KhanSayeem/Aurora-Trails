@model TourismApp.Models.AgencyProfile
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Agency Profile";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-building me-2"></i>Agency Profile</h2>
    <small class="text-muted">Manage your agency information</small>
</div>

@if (TempData["Msg"] is string ok) 
{ 
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@ok
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div> 
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-edit me-2"></i>Agency Information
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Agency" method="post">
                    @Html.AntiForgeryToken()
                    
                    <div class="mb-3">
                        <label asp-for="AgencyName" class="form-label">
                            <i class="fas fa-building me-2"></i>Agency Name *
                        </label>
                        <input asp-for="AgencyName" class="form-control" placeholder="Enter your agency name" required>
                        <span asp-validation-for="AgencyName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">
                            <i class="fas fa-file-alt me-2"></i>Description
                        </label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Describe your agency and services..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <div class="form-text">Tell potential customers about your agency, specialties, and what makes you unique.</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Website" class="form-label">
                            <i class="fas fa-globe me-2"></i>Website URL
                        </label>
                        <input asp-for="Website" class="form-control" type="url" placeholder="https://www.yourwebsite.com">
                        <span asp-validation-for="Website" class="text-danger"></span>
                        <div class="form-text">Include the full URL including https://</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">
                            <i class="fas fa-envelope me-2"></i>Contact Email
                        </label>
                        <input type="email" class="form-control" value="@User.Identity.Name" disabled>
                        <div class="form-text">Primary contact email cannot be changed here. Contact support if needed.</div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Save Profile
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-info-circle me-2"></i>Account Info
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong>Account Type:</strong>
                    <span class="badge bg-primary ms-2">
                        <i class="fas fa-building me-1"></i>Agency
                    </span>
                </div>
                <div class="mb-3">
                    <strong>Contact Email:</strong>
                    <div class="text-muted">@User.Identity.Name</div>
                </div>
                <div class="mb-3">
                    <strong>Member Since:</strong>
                    <div class="text-muted">Recently joined</div>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-chart-line me-2"></i>Business Overview
                </h6>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <div class="border-end">
                            <h5 class="text-primary mb-0">
                                <i class="fas fa-route"></i>
                            </h5>
                            <small class="text-muted">Tour Packages</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <h5 class="text-success mb-0">
                            <i class="fas fa-users"></i>
                        </h5>
                        <small class="text-muted">Bookings</small>
                    </div>
                </div>
                <div class="d-grid mt-3">
                    <a asp-controller="Tours" asp-action="MyPackages" class="btn btn-outline-primary btn-sm mb-2">
                        <i class="fas fa-route me-2"></i>My Packages
                    </a>
                    <a asp-controller="Bookings" asp-action="Manage" class="btn btn-outline-success btn-sm">
                        <i class="fas fa-calendar-check me-2"></i>Manage Bookings
                    </a>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-lightbulb me-2"></i>Profile Tips
                </h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-2"></i>
                        <small>Add a compelling description</small>
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-2"></i>
                        <small>Include your website URL</small>
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-2"></i>
                        <small>Keep information updated</small>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}