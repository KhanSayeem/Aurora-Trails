@model TourismApp.Models.TouristProfile
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "My Profile";
}

<section class="space-y-8">
    <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
        <div>
            <h1 class="heading">Tourist profile</h1>
            <p class="section-subtitle">Keep your information precise to receive relevant agency updates.</p>
        </div>
    </div>

    @if (TempData["Msg"] is string ok)
    {
        <div class="rounded-2xl border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-700 shadow-sm">@ok</div>
    }

    <div class="grid gap-6 lg:grid-cols-[1.4fr,1fr]">
        <div class="card p-6">
            <h2 class="section-title text-xl">Profile information</h2>
            <p class="section-subtitle">Only agencies you book with can view this data.</p>
            <form asp-action="Tourist" method="post" class="mt-6 space-y-5">
                @Html.AntiForgeryToken()
                <div class="form-field">
                    <label asp-for="FullName" class="form-label">Full name</label>
                    <input asp-for="FullName" class="input" placeholder="Enter your full name" required />
                    <span asp-validation-for="FullName" class="text-sm text-rose-500"></span>
                </div>
                <div class="form-field">
                    <label asp-for="Country" class="form-label">Country</label>
                    <input asp-for="Country" class="input" placeholder="Enter your country" />
                    <span asp-validation-for="Country" class="text-sm text-rose-500"></span>
                </div>
                <div class="form-field">
                    <label class="form-label">Email</label>
                    <input type="email" class="input" value="@User.Identity?.Name" disabled />
                    <p class="text-xs text-slate-400">Email changes require contacting support.</p>
                </div>
                <div class="flex justify-end">
                    <button type="submit" class="btn-primary px-6 py-2.5">Save profile</button>
                </div>
            </form>
        </div>

        <div class="space-y-6">
            <div class="card p-6">
                <h3 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Account overview</h3>
                <div class="mt-4 space-y-4 text-sm text-slate-600">
                    <div class="flex items-center justify-between">
                        <span class="text-slate-500">Account type</span>
                        <span class="badge badge-info">Tourist</span>
                    </div>
                    <div class="flex items-center justify-between">
                        <span class="text-slate-500">Email</span>
                        <span class="font-medium text-slate-900">@User.Identity?.Name</span>
                    </div>
                    <div class="flex items-center justify-between">
                        <span class="text-slate-500">Member since</span>
                        <span class="font-medium text-slate-900">Recent</span>
                    </div>
                </div>
            </div>
            <div class="card p-6">
                <h3 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Quick links</h3>
                <div class="mt-4 grid gap-3 text-sm">
                    <a asp-controller="Bookings" asp-action="Index" class="btn-outline px-4 py-2 text-left">View bookings</a>
                    <a asp-controller="Feedbacks" asp-action="Index" class="btn-outline px-4 py-2 text-left">My feedback</a>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}