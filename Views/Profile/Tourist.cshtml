@model TourismApp.Models.TouristProfile
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "My Profile";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-user-circle me-2"></i>My Profile</h2>
    <small class="text-muted">Keep your information up to date</small>
</div>

@if (TempData["Msg"] is string ok) 
{ 
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@ok
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div> 
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-edit me-2"></i>Profile Information
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Tourist" method="post">
                    @Html.AntiForgeryToken()
                    
                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label">
                            <i class="fas fa-user me-2"></i>Full Name *
                        </label>
                        <input asp-for="FullName" class="form-control" placeholder="Enter your full name" required>
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Country" class="form-label">
                            <i class="fas fa-globe me-2"></i>Country
                        </label>
                        <input asp-for="Country" class="form-control" placeholder="Enter your country">
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">
                            <i class="fas fa-envelope me-2"></i>Email
                        </label>
                        <input type="email" class="form-control" value="@User.Identity.Name" disabled>
                        <div class="form-text">Email cannot be changed here. Contact support if needed.</div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Save Profile
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-info-circle me-2"></i>Account Info
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong>Account Type:</strong>
                    <span class="badge bg-success ms-2">
                        <i class="fas fa-user me-1"></i>Tourist
                    </span>
                </div>
                <div class="mb-3">
                    <strong>Email:</strong>
                    <div class="text-muted">@User.Identity.Name</div>
                </div>
                <div class="mb-3">
                    <strong>Member Since:</strong>
                    <div class="text-muted">Recently joined</div>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-chart-bar me-2"></i>Quick Stats
                </h6>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <div class="border-end">
                            <h5 class="text-primary mb-0">
                                <i class="fas fa-calendar-check"></i>
                            </h5>
                            <small class="text-muted">My Bookings</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <h5 class="text-warning mb-0">
                            <i class="fas fa-star"></i>
                        </h5>
                        <small class="text-muted">My Reviews</small>
                    </div>
                </div>
                <div class="d-grid mt-3">
                    <a asp-controller="Bookings" asp-action="Index" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-list me-2"></i>View Activity
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}