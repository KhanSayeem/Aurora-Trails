@using Microsoft.AspNetCore.Identity
@using TourismApp.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TourismApp</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TourismApp.styles.css" asp-append-version="true" />
    <style>
        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
        }
        
        .hero-section {
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            color: white;
            padding: 3rem 0;
            margin-bottom: 2rem;
        }
        
        .feature-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            height: 100%;
        }
        
        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
        
        .footer {
            background-color: #f8f9fa;
            padding: 1rem 0;
        }
        
        .user-role-badge {
            font-size: 0.75rem;
        }
        
        main {
            flex: 1;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-globe-americas me-2"></i>
                    <span class="fw-bold">TourismApp</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-lock me-1"></i>Privacy
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Tours" asp-action="Index">
                                <i class="fas fa-map-signs me-1"></i>Browse Tours
                            </a>
                        </li>
                        @if (User.IsInRole("Agency"))
                        {
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white dropdown-toggle" href="#" id="agencyDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-building me-1"></i>Agency Dashboard
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="agencyDropdown">
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="AgencyDashboard">Dashboard</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Tours" asp-action="MyPackages">My Packages</a></li>
                                <li><a class="dropdown-item" asp-controller="Bookings" asp-action="Manage">Manage Bookings</a></li>
                                <li><a class="dropdown-item" asp-controller="Feedbacks" asp-action="Agency">Customer Feedbacks</a></li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="Index">Reports</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Profile" asp-action="Agency">My Profile</a></li>
                            </ul>
                        </li>
                        }
                        @if (User.IsInRole("Tourist"))
                        {
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white dropdown-toggle" href="#" id="touristDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user me-1"></i>My Account
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="touristDropdown">
                                <li><a class="dropdown-item" asp-controller="Bookings" asp-action="Index">My Bookings</a></li>
                                <li><a class="dropdown-item" asp-controller="Feedbacks" asp-action="Index">My Feedbacks</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Profile" asp-action="Tourist">My Profile</a></li>
                            </ul>
                        </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    
    @if (IsSectionDefined("Hero"))
    {
        @RenderSection("Hero", required: false)
    }
    else
    {
        <div class="hero-section">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8">
                        <h1 class="display-4 fw-bold">Discover Amazing Travel Experiences</h1>
                        <p class="lead">Explore handpicked tour packages from trusted travel agencies around the world.</p>
                    </div>
                </div>
            </div>
        </div>
    }
    
    <div class="container flex-grow-1">
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>

    <footer class="footer border-top mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-0">&copy; 2025 - TourismApp</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Privacy</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
