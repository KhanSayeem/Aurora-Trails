@using Microsoft.AspNetCore.Identity
@using TourismApp.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    var displayName = User.Identity?.Name ?? "Account";
    var initials = string.Join(string.Empty, displayName.Split(' ', StringSplitOptions.RemoveEmptyEntries).Select(n => n[0]).Take(2)).ToUpperInvariant();
    if (string.IsNullOrWhiteSpace(initials))
    {
        initials = "TA";
    }

    var roleBadge = User.IsInRole("Agency") ? "Agency" : User.IsInRole("Tourist") ? "Tourist" : "Member";
    string? profileAction = User.IsInRole("Agency") ? "Agency" : User.IsInRole("Tourist") ? "Tourist" : null;

    <details class="group relative" data-user-menu>
        <summary class="flex cursor-pointer items-center gap-3 rounded-2xl border border-slate-200 bg-white px-3 py-2 text-left text-sm font-medium text-slate-700 shadow-sm transition hover:border-primary/40 hover:text-primary focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary/40">
            <span class="grid h-9 w-9 place-items-center rounded-xl bg-primary/10 text-sm font-semibold text-primary">@initials</span>
            <span class="hidden flex-col leading-tight md:flex">
                <span class="font-semibold text-slate-900">@displayName</span>
                <span class="text-xs font-medium uppercase tracking-wide text-slate-400">@roleBadge</span>
            </span>
            <svg xmlns="http://www.w3.org/2000/svg" class="ml-auto h-4 w-4 text-slate-400 transition group-open:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.6">
                <path stroke-linecap="round" stroke-linejoin="round" d="m19 9-7 7-7-7" />
            </svg>
        </summary>
        <div class="absolute right-0 mt-3 w-60 rounded-2xl border border-slate-200 bg-white p-3 shadow-card">
            <div class="grid gap-1 text-sm font-medium text-slate-600">
                <a class="nav-menu-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Account settings</a>
                @if (!string.IsNullOrEmpty(profileAction))
                {
                    <a class="nav-menu-item" asp-controller="Profile" asp-action="@profileAction">View profile</a>
                }
                <form class="mt-1" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-menu-item w-full justify-between text-left">
                        <span>Sign out</span>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h6a2 2 0 012 2v1" />
                        </svg>
                    </button>
                </form>
            </div>
        </div>
    </details>
}
else
{
    <div class="flex items-center gap-2">
        <a class="btn-outline px-4 py-2" asp-area="Identity" asp-page="/Account/Login">Sign in</a>
        <a class="btn-primary px-4 py-2" asp-area="Identity" asp-page="/Account/Register">Create account</a>
    </div>
}
