@using Microsoft.AspNetCore.Identity
@using TourismApp.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav align-items-center">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle d-flex align-items-center text-white" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fas fa-user-circle fa-lg me-1"></i>
            <span>@User.Identity?.Name</span>
            @if (User.IsInRole("Tourist"))
            {
                <span class="badge bg-success ms-2 user-role-badge">Tourist</span>
            }
            else if (User.IsInRole("Agency"))
            {
                <span class="badge bg-info ms-2 user-role-badge">Agency</span>
            }
        </a>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
            <li>
                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                    <i class="fas fa-cog me-2"></i>Account Settings
                </a>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li>
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="dropdown-item">
                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                    </button>
                </form>
            </li>
        </ul>
    </li>
}
else
{
    <li class="nav-item me-2">
        <a class="nav-link btn btn-outline-light text-white" asp-area="Identity" asp-page="/Account/Register">
            <i class="fas fa-user-plus me-1"></i>Register
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link btn btn-outline-light text-white" asp-area="Identity" asp-page="/Account/Login">
            <i class="fas fa-sign-in-alt me-1"></i>Login
        </a>
    </li>
}
</ul>
