@model IEnumerable<TourismApp.Models.Booking>
@{
    Layout = null;
    ViewData["Title"] = "Test Bookings";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container">
        <h2>Test Bookings Page</h2>

        <p>If you can see this text, the view is rendering correctly.</p>

        @if (Model == null)
        {
            <p>Model is null</p>
        }
        else if (!Model.Any())
        {
            <p>No bookings found</p>
        }
        else
        {
            <p>Found @Model.Count() bookings</p>
            <ul>
            @foreach (var booking in Model)
            {
                <li>@booking.Id - @booking.TourDate.TourPackage.Title</li>
            }
            </ul>
        }
    </div>
</body>
</html>