@model TourismApp.Models.TourPackage
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = Model.Title;
    var heroImage = string.IsNullOrWhiteSpace(Model.ImagePath)
        ? Url.Content("~/images/placeholder.jpg")
        : Url.Content(Model.ImagePath);
}

<section class="grid gap-10 lg:grid-cols-[1.6fr,1fr]">
    <article class="card overflow-hidden">
        <div class="relative">
            <img src="@heroImage" asp-append-version="true" alt="@Model.Title" class="h-[420px] w-full object-cover" />
            <div class="absolute right-5 top-5 rounded-full bg-white/80 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-slate-600">
                @Model.DurationDays @(Model.DurationDays == 1 ? "day" : "days")
            </div>
        </div>
        <div class="space-y-6 p-8">
            <div class="flex flex-col gap-4 lg:flex-row lg:items-start lg:justify-between">
                <div class="space-y-2">
                    <h1 class="text-3xl font-semibold text-slate-900">@Model.Title</h1>
                    <p class="text-sm text-slate-500">
                        Operated by <span class="font-semibold text-slate-700">@Model.AgencyProfile?.AgencyName</span>
                    </p>
                </div>
                <div class="rounded-2xl bg-primary/10 px-5 py-3 text-right">
                    <p class="text-xs uppercase tracking-wide text-primary">Starts at</p>
                    <p class="text-2xl font-semibold text-primary">$@Model.Price</p>
                </div>
            </div>

            <p class="text-sm leading-relaxed text-slate-600">@Model.Description</p>

            <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
                <div class="rounded-2xl border border-slate-200 bg-white p-4">
                    <p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Duration</p>
                    <p class="mt-2 text-lg font-semibold text-slate-900">@Model.DurationDays @(Model.DurationDays == 1 ? "day" : "days")</p>
                </div>
                <div class="rounded-2xl border border-slate-200 bg-white p-4">
                    <p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Group size</p>
                    <p class="mt-2 text-lg font-semibold text-slate-900">@Model.GroupSizeLimit people</p>
                </div>
                <div class="rounded-2xl border border-slate-200 bg-white p-4">
                    <p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Guest rating</p>
                    <p class="mt-2 text-lg font-semibold text-slate-900">4.8 <span class="text-xs font-medium text-slate-400">(128 reviews)</span></p>
                </div>
            </div>
        </div>
    </article>

    <aside class="space-y-6">
        <div class="card p-6">
            <div class="flex items-start justify-between">
                <div>
                    <h2 class="section-title text-lg">Book this tour</h2>
                    <p class="section-subtitle">Secure spots for your travellers.</p>
                </div>
                <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-slate-500">
                    Live availability
                </span>
            </div>

            <div class="mt-6 space-y-4">
                @if (!(Model.TourDates?.Any() ?? false))
                {
                    <div class="empty-state border-slate-200 bg-slate-50">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-slate-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10m-12 8h14a2 2 0 002-2V7a2 2 0 00-2-2h-3m-8 0H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        <div>
                            <p class="text-base font-semibold text-slate-700">No dates published yet.</p>
                            <p class="text-sm text-slate-500">Check back soon or contact the agency for custom scheduling.</p>
                        </div>
                    </div>
                }
                else
                {
                    @foreach (var date in Model.TourDates.OrderBy(x => x.Date))
                    {
                        <div class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm">
                            <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
                                <div>
                                    <p class="text-sm font-semibold text-slate-900">@date.Date.ToString("dddd, MMM dd yyyy")</p>
                                    <p class="text-xs text-slate-500">@date.Capacity spots remaining</p>
                                </div>
                                <span class="rounded-full bg-primary/10 px-3 py-1 text-xs font-semibold text-primary">Reserve now</span>
                            </div>

                            @if (User.IsInRole("Tourist"))
                            {
                                <form asp-controller="Bookings" asp-action="Create" method="post" class="mt-4 space-y-3">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="tourDateId" value="@date.Id" />
                                    <div class="form-field">
                                        <label for="participants-@date.Id" class="form-label">Number of participants</label>
                                        <input id="participants-@date.Id" type="number" name="participants" min="1" max="@date.Capacity" class="input" placeholder="How many travellers?" required />
                                    </div>
                                    <button type="submit" class="btn-primary w-full px-4 py-2 font-semibold">Book this date</button>
                                </form>
                            }
                            else if (!(User.Identity?.IsAuthenticated ?? false))
                            {
                                <a class="btn-outline mt-4 w-full px-4 py-2 text-center font-semibold" href="@Url.Page("/Account/Login")">Log in to book</a>
                            }
                            else
                            {
                                <div class="mt-4 rounded-xl border border-amber-200 bg-amber-50/80 px-4 py-3 text-sm text-amber-600">
                                    Only tourist accounts can complete bookings.
                                </div>
                            }
                        </div>
                    }
                }
            </div>
        </div>

        <div class="card p-6">
            <h2 class="section-title text-lg">Tour amenities</h2>
            <p class="section-subtitle">Included highlights curated by the agency.</p>
            <div class="mt-4 flex flex-wrap gap-2">
                @if (Model.TourPackageAmenities?.Any() == true)
                {
                    @foreach (var amenity in Model.TourPackageAmenities)
                    {
                        <span class="inline-flex items-center gap-2 rounded-full border border-slate-200 bg-slate-50 px-3 py-1 text-xs font-semibold text-slate-600">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5 text-emerald-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                            </svg>
                            @amenity.Amenity.Name
                        </span>
                    }
                }
                else
                {
                    <span class="text-sm text-slate-500">No amenities specified for this tour.</span>
                }
            </div>
        </div>
    </aside>
</section>

<section class="mt-12 space-y-6">
    <div class="flex flex-col gap-2">
        <h2 class="section-title">Customer reviews</h2>
        <p class="section-subtitle">Snapshot from recent travellers. Agency responses sync automatically.</p>
    </div>

    <div class="grid gap-6 lg:grid-cols-[auto,1fr]">
        <div class="rounded-2xl border border-slate-200 bg-white p-6 text-center shadow-sm">
            <p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Average rating</p>
            <p class="mt-4 text-4xl font-semibold text-slate-900">4.8</p>
            <div class="mt-2 flex justify-center gap-1 text-amber-400">
                @for (int i = 0; i < 5; i++)
                {
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.176 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L4.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                }
            </div>
            <p class="mt-3 text-xs text-slate-500">Based on 128 traveller stories</p>
        </div>
        <div class="card p-6">
            <div class="flex items-start gap-4">
                <div class="grid h-12 w-12 place-items-center rounded-xl bg-primary/10 text-primary">
                    <span class="text-sm font-semibold">AT</span>
                </div>
                <div class="space-y-2">
                    <div>
                        <p class="text-sm font-semibold text-slate-900">Alex Traveler</p>
                        <p class="text-xs text-slate-500">Visited July 2025</p>
                    </div>
                    <div class="flex items-center gap-1 text-amber-400">
                        @for (int i = 0; i < 5; i++)
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.176 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L4.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                            </svg>
                        }
                    </div>
                    <p class="text-sm text-slate-600">This was an amazing experience! The guide was knowledgeable and the sights were breathtaking. Highly recommend this tour to anyone visiting the area.</p>
                </div>
            </div>
        </div>
    </div>
</section>

