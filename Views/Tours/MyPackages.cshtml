@model IEnumerable<TourismApp.Models.TourPackage>
@{
  ViewData["Title"] = "My Packages";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>My Tour Packages</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus-circle me-1"></i>Create New Package
    </a>
</div>

@if (TempData["Msg"] is string msg)
{
  <div class="alert alert-success alert-dismissible fade show d-flex align-items-center" role="alert">
    <i class="fas fa-check-circle fa-lg me-2"></i>
    <div>@msg</div>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
}

@if (Model == null || !Model.Any())
{
    <div class="card shadow-sm">
        <div class="card-body text-center py-5">
            <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
            <h4 class="mb-3">No Tour Packages Yet</h4>
            <p class="mb-4">Get started by creating your first tour package to showcase to travelers.</p>
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="fas fa-plus-circle me-1"></i>Create Your First Package
            </a>
        </div>
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var p in Model)
        {
            <div class="col">
                <div class="card tour-card h-100 shadow-sm">
                    <img src="@(string.IsNullOrWhiteSpace(p.ImagePath) 
                        ? Url.Content("~/images/placeholder.jpg") 
                        : Url.Content(p.ImagePath))"
                        asp-append-version="true"
                        class="card-img-top" 
                        style="height: 200px; object-fit: cover;"
                        alt="@p.Title" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@p.Title</h5>
                        <p class="card-text flex-grow-1">
                            @(p.Description.Length > 100 ? p.Description.Substring(0, 100) + "..." : p.Description)
                        </p>
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="h5 text-primary mb-0">$@p.Price</span>
                                <span class="badge bg-secondary">@p.DurationDays @(p.DurationDays == 1 ? "day" : "days")</span>
                            </div>
                            <div class="btn-group w-100" role="group">
                                <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-outline-primary">
                                    <i class="fas fa-edit me-1"></i>Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-outline-danger"
                                   onclick="return confirm('Are you sure you want to delete this package? This action cannot be undone.');">
                                    <i class="fas fa-trash me-1"></i>Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
