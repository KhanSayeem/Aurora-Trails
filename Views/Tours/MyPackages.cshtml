@model IEnumerable<TourismApp.Models.TourPackage>
@{
    ViewData["Title"] = "My Packages";
}

<section class="space-y-8">
    <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
        <div>
            <h1 class="heading">My tour packages</h1>
            <p class="section-subtitle">Curate, iterate, and keep your experiences feeling refined.</p>
        </div>
        <a asp-action="Create" class="btn-primary inline-flex items-center gap-2 px-5 py-2.5">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
            </svg>
            Create package
        </a>
    </div>

    @if (TempData["Msg"] is string msg)
    {
        <div class="rounded-2xl border border-emerald-200 bg-emerald-50 px-4 py-3 text-sm text-emerald-700 shadow-sm">
            <div class="flex items-start gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <p>@msg</p>
            </div>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="empty-state">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-slate-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 13l-7 7-7-7" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 5v14" />
            </svg>
            <div>
                <p class="text-base font-semibold text-slate-700">No tour packages yet</p>
                <p class="text-sm text-slate-500">Create your first package to showcase an itinerary to travellers.</p>
            </div>
            <a asp-action="Create" class="btn-primary px-5 py-2.5">Create your first package</a>
        </div>
    }
    else
    {
        <div class="grid gap-6 md:grid-cols-2 xl:grid-cols-3">
            @foreach (var package in Model)
            {
                <article class="card overflow-hidden">
                    <div class="relative">
                        <img src="@(string.IsNullOrWhiteSpace(package.ImagePath) ? Url.Content("~/images/placeholder.jpg") : Url.Content(package.ImagePath))" asp-append-version="true" alt="@package.Title" class="h-48 w-full object-cover" />
                        <div class="absolute right-4 top-4 rounded-full bg-white/80 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-slate-500">
                            @package.DurationDays @(package.DurationDays == 1 ? "day" : "days")
                        </div>
                    </div>
                    <div class="flex flex-col gap-4 p-6">
                        <div>
                            <h2 class="text-lg font-semibold text-slate-900">@package.Title</h2>
                            <p class="line-clamp-3 text-sm text-slate-500">
                                @(package.Description.Length > 120 ? package.Description.Substring(0, 120) + "â€¦" : package.Description)
                            </p>
                        </div>
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-slate-500">From <span class="text-lg font-semibold text-slate-900">$@package.Price</span></span>
                            <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-500">@package.GroupSizeLimit travellers</span>
                        </div>
                        <div class="grid gap-2 sm:grid-cols-2">
                            <a asp-action="Edit" asp-route-id="@package.Id" class="btn-outline px-4 py-2 text-center text-sm font-semibold">Edit</a>
                            <a asp-action="Delete" asp-route-id="@package.Id" class="btn-outline border-rose-200 text-rose-600 hover:bg-rose-50 hover:text-rose-700 px-4 py-2 text-center text-sm font-semibold" onclick="return confirm('Are you sure you want to delete this package? This action cannot be undone.');">
                                Delete
                            </a>
                        </div>
                    </div>
                </article>
            }
        </div>
    }
</section>