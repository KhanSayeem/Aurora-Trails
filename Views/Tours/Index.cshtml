@model IEnumerable<TourismApp.Models.TourPackage>
@{
    ViewData["Title"] = "Browse Tours";
    var query = Context.Request.Query["q"].ToString();
}

<section class="space-y-8">
    <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
        <div>
            <h1 class="heading">Browse tours</h1>
            <p class="section-subtitle">Filter curated itineraries and uncover your next travel story.</p>
        </div>
        <a class="btn-outline px-5 py-2.5" asp-area="" asp-controller="Home" asp-action="Index">Return home</a>
    </div>

    <div class="card p-6">
        <form method="get" class="flex flex-col gap-3 md:flex-row md:items-center">
            <label for="tour-search" class="form-label">Search packages</label>
            <div class="flex w-full flex-col gap-3 md:flex-row md:items-center">
                <div class="relative flex-1">
                    <span class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3 text-slate-400">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-4.35-4.35m0 0A6.5 6.5 0 1110.5 4a6.5 6.5 0 016.15 8.65z" />
                        </svg>
                    </span>
                    <input id="tour-search" name="q" value="@query" placeholder="Search by title, description, or agency" class="input pl-9" />
                </div>
                <button type="submit" class="btn-primary px-6 py-2.5 text-sm font-semibold">Search</button>
            </div>
        </form>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="empty-state">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-slate-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 13h6m-6-4h6m-9 8h12M5 7h14a2 2 0 012 2v11l-4-3H5a2 2 0 01-2-2V9a2 2 0 012-2z" />
            </svg>
            <div>
                <p class="text-base font-semibold text-slate-700">No tours matched your filters.</p>
                <p class="text-sm text-slate-500">Reset your search or explore highlight itineraries curated by our editors.</p>
            </div>
        </div>
    }
    else
    {
        <div class="grid gap-6 md:grid-cols-2 xl:grid-cols-3">
            @foreach (var tour in Model)
            {
                <article class="card overflow-hidden">
                    <div class="relative">
                        <img src="@(string.IsNullOrWhiteSpace(tour.ImagePath) ? Url.Content("~/images/placeholder.jpg") : Url.Content(tour.ImagePath))" asp-append-version="true" alt="@tour.Title" class="h-48 w-full object-cover" />
                        <div class="absolute right-4 top-4 rounded-full bg-white/80 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-slate-500">
                            @tour.DurationDays @(tour.DurationDays == 1 ? "day" : "days")
                        </div>
                    </div>
                    <div class="flex flex-col gap-4 p-6">
                        <div class="space-y-1">
                            <div class="flex items-center justify-between text-xs font-semibold uppercase tracking-wide text-slate-400">
                                <span>@tour.AgencyProfile?.AgencyName</span>
                                <span class="inline-flex items-center gap-1 rounded-full bg-slate-100 px-2 py-0.5 text-[11px] text-slate-500">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.6">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 8c-.912 0-1.667.672-1.667 1.5S11.088 11 12 11s1.667-.672 1.667-1.5S12.912 8 12 8z" />
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M5.143 15.5C6.507 13.607 9.05 12.5 12 12.5s5.493 1.107 6.857 3" />
                                    </svg>
                                    @tour.GroupSizeLimit ppl
                                </span>
                            </div>
                            <h2 class="text-lg font-semibold text-slate-900">@tour.Title</h2>
                        </div>
                        <p class="line-clamp-3 text-sm text-slate-500">
                            @(tour.Description.Length > 150 ? tour.Description.Substring(0, 150) + "â€¦" : tour.Description)
                        </p>
                        <div class="flex items-center justify-between">
                            <div class="text-sm text-slate-500">
                                From <span class="text-lg font-semibold text-slate-900">$@tour.Price</span>
                            </div>
                            <a asp-action="Details" asp-route-id="@tour.Id" class="btn-primary px-4 py-2 text-sm font-semibold">View details</a>
                        </div>
                    </div>
                </article>
            }
        </div>
    }
</section>