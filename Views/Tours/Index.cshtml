@model IEnumerable<TourismApp.Models.TourPackage>
@{
  ViewData["Title"] = "Browse Tours";
}
<h2>Browse Tours</h2>
<form method="get" class="mb-3">
  <div class="input-group">
    <input name="q" class="form-control" placeholder="Search tours..." value="@Context.Request.Query["q"]" />
    <button class="btn btn-outline-secondary">Search</button>
  </div>
</form>
<div class="row g-3">
  @foreach (var t in Model)
  {
    <div class="col-md-4">
      <div class="card h-100">
        <div class="card-body">
          <h5>@t.Title</h5>
          <p>@t.Description.Substring(0, Math.Min(160, t.Description.Length))...</p>
          <div><strong>Price:</strong> @t.Price</div>
          <a asp-action="Details" asp-route-id="@t.Id" class="btn btn-primary btn-sm mt-2">Details</a>
        </div>
      </div>
    </div>
  }
</div>
