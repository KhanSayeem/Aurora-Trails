@model IEnumerable<TourismApp.Models.TourPackage>
@{
  ViewData["Title"] = "Browse Tours";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Browse Tours</h2>
    <div>
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Back to Home
        </a>
    </div>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="d-flex">
            <div class="input-group">
                <input name="q" class="form-control form-control-lg" placeholder="Search tours by title, description, or agency..." value="@Context.Request.Query["q"]" />
                <button class="btn btn-primary btn-lg" type="submit">
                    <i class="fas fa-search me-1"></i>Search
                </button>
            </div>
        </form>
    </div>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info d-flex align-items-center" role="alert">
        <i class="fas fa-info-circle fa-lg me-2"></i>
        <div>No tours found matching your search criteria. Try different keywords or browse all tours.</div>
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var t in Model)
        {
            <div class="col-md-4">
                <div class="card tour-card h-100 shadow-sm">
                    <img src="@(string.IsNullOrWhiteSpace(t.ImagePath) 
                        ? Url.Content("~/images/placeholder.jpg") 
                        : Url.Content(t.ImagePath))"
                        asp-append-version="true"
                        class="card-img-top" 
                        alt="@t.Title" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@t.Title</h5>
                        <p class="card-text flex-grow-1">
                            @(t.Description.Length > 120 ? t.Description.Substring(0, 120) + "..." : t.Description)
                        </p>
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="h5 text-primary mb-0">$@t.Price</span>
                                <span class="badge bg-secondary">@t.DurationDays @(t.DurationDays == 1 ? "day" : "days")</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <small class="text-muted">
                                    <i class="fas fa-building me-1"></i>@t.AgencyProfile?.AgencyName
                                </small>
                                <small class="text-muted">
                                    <i class="fas fa-users me-1"></i>@t.GroupSizeLimit ppl
                                </small>
                            </div>
                            <a asp-action="Details" asp-route-id="@t.Id" class="btn btn-primary w-100">
                                <i class="fas fa-info-circle me-1"></i>View Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
